<h1>Create a new user</h1>
<%= form_for @user do |f| %>
	<div>
		<%= f.label :name %>
		<%= f.text_field :name, placeholder: "John" %>
	</div>
	<div>
		<%= f.label :email %>
		<%= f.text_field :email, placeholder: "super@email.com" %>
	</div>
	<div>
		<%= f.submit "Create new user" %>
	</div>
<% end %>