<h2>Add a new product to your basket</h2>
<%= form_for [@user, @product] do |f| %> 
	<div>
		<%= f.label :title %>
		<%= f.text_field :title, placeholder: "Product title" %>
	</div>
	<div>
		<%= f.label :description %>
		<%= f.text_area :description, placeholder: "Product description" %>
	</div>
	<div>
		<%= f.label "Deadline" %>
		<%= f.date_field :date %>
		<%= f.time_field :time %>
	</div>
	<div>
		<%= f.submit "Add product" %>
	</div>
<% end %>